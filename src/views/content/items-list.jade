.input-group.filter
  i.input-group-addon.fa.fa-search
  input.form-control(id='filter' placeholder='{{ "search" | translate }}' ng-model='listSearch')
  i.pointer.input-group-addon.fa.fa-plus(ui-sref='{{ newState }}')
  i.pointer.input-group-addon.fa.fa-upload(ng-if='isGuides', ng-click='import()')

.list-group.mu-list-group
  button.list-group-item.mu-list-group-item(
      ng-repeat='item in list | orderBy:Model.sortBy() | filter:listSearch',
      ng-click='open(item)')
    i.mu-list-item-icon(class='{{ item.icon() }}')
    div.divider-vertical
    span.text-primary
      span.mu-list-group-item-data
        span {{ item.fullName() }}
        small {{ item.slug }}
